<!DOCTYPE html>
<html lang="en">
<head><% include partials/templates/head.ejs %></head>
<body>
  <header><% include partials/templates/header.ejs %></header>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <!-- Modal Structure -->
    <div id="modal" class="modal">
        <div class="modal-content">

            <h4>Add New Recipe</h4>

            <div class="input-field col s6">
                <input id="recipe_name" type="text" class="validate">
                <label for="recipe_name">Recipe Name</label>
            </div>

            <label>What type of meal is this?</label>
            <select id="recipe_type" class="browser-default">
    <option value="" disabled>Meal Type</option>
    <option value="1">Breakfast</option>
    <option value="2">Lunch</option>
    <option value="3" selected>Dinner</option>
    <option value="4">Snack</option>
    <option value="5">Dessert</option>
  </select>

            <table class="responsive-table">
                <thead>
                    <tr>
                        <th class="tableCell" data-field="ingredient">Ingredient</th>
                        <th class="tableCell" data-field="qty">Qty</th>
                        <th class="tableCell" data-field="unit">Unit</th>
                    </tr>
                </thead>

                <tbody data-bind="foreach: ingredients">
                    <tr>
                        <td>
                            <div class="input-field col s6">
                                <input data-bind="value: name" type="text" class="validate">
                            </div>
                        </td>
                        <td>
                            <div class="input-field col s6">
                                <input data-bind="value: qty" type="text" class="validate">
                            </div>
                        </td>
                        <td>
                            <select data-bind="options: $root.availableUnits, value: unit, optionsText: 'name'" id="unit" class="browser-default"></select>
                        </td>
                    </tr>
                </tbody>
            </table>

                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s6">
                                <textarea id="directions" class="materialize-textarea"></textarea>
                                <label for="directions">Directions</label>
                            </div>
                        </div>
                    </form>
                </div>


        </div>
        <div class="modal-footer">
            <a id="addRecipeButton" href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">ADD</a>
            <a data-bind="click: addIngredient" class=" modal-action modal-close waves-effect waves-green btn-flat">CANCEL</a>
        </div>
    </div>

    </div>
  </div>
  <% include partials/templates/footer.ejs %>
  <% include partials/templates/defaults.ejs %>
  <script src="/javascripts/recipes.js"></script>
  </body>
</html>